<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>所有文章</title>
    <link href=".//layui/css/layui.css" rel="stylesheet">
    <script src=".//layui/layui.js"></script>
    <script src=".//js/jquery-3.6.0.min.js"></script>
</head>

<body>
    <form class="layui-form layui-row layui-col-space16">
        <div class="layui-form-item">
            <div class="layui-input-inline">
                <div class="layui-inline">
                    <input type="text" name="titleId" value="" placeholder="文章ID" class="layui-input" lay-affix="clear"
                        style="width: 150px;">
                </div>
            </div>

            <div class="layui-input-inline">
                <div class="layui-inline">
                    <input type="text" name="topic" placeholder="标题" lay-affix="clear" class="layui-input"
                        style="width: 150px;">
                </div>
            </div>

            <div class="layui-input-inline">
                <div class="layui-inline">
                    <input type="text" name="name" placeholder="作者" lay-affix="clear" class="layui-input"
                        style="width: 150px;">
                </div>
            </div>

            <input type="hidden" name="model" value="手机">

            <div class="layui-input-inline">
                <div class="layui-btn-container layui-col-xs12">
                    <button class="layui-btn" lay-submit lay-filter="demo-table-search">
                        <i class="layui-icon layui-icon-search layuiadmin-button-btn"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
    <table class="layui-hide" id="ID-table-demo-search"></table>


    <script>
        layui.use(function () {
            var table = layui.table;
            var form = layui.form;
            var laydate = layui.laydate;
            var dropdown = layui.dropdown;
            // 创建表格实例
            table.render({
                elem: '#ID-table-demo-search',
                url: 'SelectAllArticleServlet', // 此处为静态模拟数据，实际使用时需换成真实接口
                page: true,
                cols: [
                    [
                        {
                            field: 'titleId',
                            title: '文章ID',
                            width: 150,
                            sort: true,
                            fixed: true
                        },
                        {
                            field: 'topic',
                            title: '标题',
                            width: 770
                        },
                        {
                            field: 'name',
                            title: '作者',
                            width: 120,
                            sort: true
                        },
                        {
                            field: 'uploadTime',
                            title: '发布日期',
                            width: 200,
                            sort: true
                        },
                        {
                            field:'model',
                            title: '机型',
                            width: 100
                        },
                        {
                            field: 'views',
                            title: '浏览量',
                            width: 100
                        },
                        {
                            field: 'likes',
                            title: '点赞量',
                            width: 100
                        }
                    ]
                ],
                height: 'full-55',
                done: function (res, curr, count) {
                    // 遍历表格数据
                    res.data.forEach(function (item) {
                        if (item.release === 0) {
                            // 找到对应的表格行元素并隐藏
                            var tr = $('#ID-table-demo-search').find('tr[data-index="' + item.LAY_TABLE_INDEX + '"]');
                            tr.hide();
                        }
                    });
                }
            });
            // 日期
            laydate.render({
                elem: '.demo-table-search-date'
            });

            // 搜索提交
            form.on('submit(demo-table-search)', function (data) {
                var field = data.field; // 获得表单字段
                // 执行搜索重载
                table.reload('ID-table-demo-search', {
                    page: {
                        curr: 1 // 重新从第 1 页开始
                    },
                    url: 'SearchArticleServlet',
                    where: field // 搜索的字段
                });
                return false; // 阻止默认 form 跳转
            });
        });
    </script>

</body>

</html>
    