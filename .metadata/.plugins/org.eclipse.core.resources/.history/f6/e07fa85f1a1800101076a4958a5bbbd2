@WebFilter(urlPatterns = "/javaweb/*")
public class CookieAuthenticationFilter extends HttpFilter implements Filter {
    // ...
    public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain)
            throws IOException, ServletException {
        HttpServletRequest httpRequest = (HttpServletRequest) request;
        HttpServletResponse httpResponse = (HttpServletResponse) response;

        String requestURI = httpRequest.getRequestURI();
        System.out.println("Request URI: " + requestURI);

        if (requestURI.startsWith("/javaweb/")) {
            boolean isAuthenticated = false;
            Cookie[] cookies = httpRequest.getCookies();
            String username = null;
            String role = null;
            if (cookies != null) {
                for (Cookie cookie : cookies) {
                    System.out.println("Cookie name: " + cookie.getName() + ", value: " + cookie.getValue());
                    if ("username".equals(cookie.getName())) {
                        username = cookie.getValue();
                    } else if ("role".equals(cookie.getName())) {
                        role = cookie.getValue();
                    }
                }
                if (username != null && !username.isEmpty() && role != null && !role.isEmpty()) {
                    isAuthenticated = true;
                }
            }

            System.out.println("Is authenticated: " + isAuthenticated);

            if (!isAuthenticated) {
                System.out.println("Not authenticated, redirecting to login page.");
                httpResponse.sendRedirect("/LoginServlet");
                return;
            }
        }

        chain.doFilter(request, response);
    }
    // ...
}