    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>手机</title>
    <link href="../../layui/css/layui.css" rel="stylesheet">
    <script src="../../layui/layui.js"></script>
    <script src="../../js/jquery-3.6.0.min.js"></script>
    <style>
       .hide-dropdown {
            display: none;
        }

        html,
        body {
            /* overflow-x: hidden; */
            overflow: hidden;
        }

        #article-list {
            height: calc(100vh - 100px);
            overflow-y: auto;
        }

        .article-item {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }

        .article-item a {
            color: #01AAED;
        }
    </style>
</head>

<body>
    <form class="layui-form layui-row layui-col-space16">
        <div class="layui-form-item">
            <div class="layui-input-inline">
                <div class="layui-inline">
                    <input type="text" name="titleId" value="" placeholder="文章ID"
                        class="layui-input" lay-affix="clear" style="width: 150px;">
                </div>
            </div>

            <div class="layui-input-inline">
                <div class="layui-inline">
                    <input type="text" name="topic" placeholder="标题" lay-affix="clear"
                        class="layui-input" style="width: 150px;">
                </div>
            </div>

            <div class="layui-input-inline">
                <div class="layui-inline">
                    <input type="text" name="name" placeholder="作者" lay-affix="clear"
                        class="layui-input" style="width: 150px;">
                </div>
            </div>

            <div class="layui-input-inline">
                <div class="layui-btn-container layui-col-xs12">
                    <button class="layui-btn" lay-submit lay-filter="demo-table-search">
                        <i class="layui-icon layui-icon-search layuiadmin-button-btn"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
    <div id="article-list"></div>


    <script>
        layui.use(['table', 'form'], function () {
            var table = layui.table;
            var form = layui.form;

            var page = 1;
            var limit = 10;
            var loading = false;
            var searchParams = { model: '手机' };

            function loadArticles(isSearch) {
                if (loading) return;
                loading = true;

                if (isSearch) {
                    page = 1;
                    $('#article-list').html('');
                }

                var url = page === 1 ? '../../SelectPhoneArticleServlet' : '../../SearchArticleServlet';
                var params = {
                    page: page,
                    limit: limit,
                    ...searchParams
                };

                $.ajax({
                    url: url,
                    type: 'GET',
                    data: params,
                    dataType: 'json',
                    success: function (res) {
                        if (res.code === 0) {
                            var data = res.data.filter(function (item) {
                                return item.release == 1;
                            });

                            data.forEach(function (item) {
                                var link = "CurrentArticle.html?titleId=" + item.titleId;
                                var articleHtml = `
                                    <div class="article-item">
                                        <p><a href="${link}">${item.topic}</a></p>
                                        <p>文章ID: ${item.titleId}</p>
                                        <p>作者: ${item.name}</p>
                                        <p>发布日期: ${item.uploadTime}</p>
                                        <p>机型: ${item.model}</p>
                                        <p>浏览量: ${item.views}</p>
                                        <p>点赞量: ${item.likes}</p>
                                    </div>
                                `;
                                $('#article-list').append(articleHtml);
                            });

                            if (data.length > 0) {
                                page++;
                            }
                        }
                        loading = false;
                    },
                    error: function () {
                        loading = false;
                    }
                });
            }

            // 初始加载
            loadArticles(false);

            // 滚动加载
            $(window).scroll(function () {
                if ($(window).scrollTop() + $(window).height() >= $(document).height() - 100) {
                    loadArticles(false);
                }
            });

            // 搜索提交
            form.on('submit(demo-table-search)', function (data) {
                searchParams = data.field;
                searchParams.model = '手机';
                loadArticles(true);
                return false;
            });
        });
    </script>

</body>

</html>    