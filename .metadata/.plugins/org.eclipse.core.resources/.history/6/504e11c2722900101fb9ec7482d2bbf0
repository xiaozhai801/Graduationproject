    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>手机文章列表</title>
    <link href="../../layui/css/layui.css" rel="stylesheet">
    <style>
        .container {
            padding: 15px;
            height: 100vh;
            box-sizing: border-box;
        }
        #scroll-table {
            margin-top: 15px;
            border: 1px solid #e6e6e6;
            border-radius: 2px;
        }
        #ID-table-body {
            height: calc(100vh - 160px);
            overflow-y: auto;
        }
        .layui-table {
            width: 100%;
            table-layout: fixed;
        }
        .layui-table td {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
<div class="container">
    <form class="layui-form layui-row layui-col-space16">
        <div class="layui-form-item">
            <div class="layui-input-inline">
                <input type="text" name="titleId" placeholder="文章ID" class="layui-input" lay-affix="clear">
            </div>
            <div class="layui-input-inline">
                <input type="text" name="topic" placeholder="标题" class="layui-input" lay-affix="clear">
            </div>
            <div class="layui-input-inline">
                <input type="text" name="name" placeholder="作者" class="layui-input" lay-affix="clear">
            </div>
            <div class="layui-input-inline">
                <button class="layui-btn" lay-submit lay-filter="demo-table-search">
                    <i class="layui-icon layui-icon-search"></i>
                </button>
            </div>
        </div>
    </form>

    <div id="scroll-table">
        <table class="layui-table" lay-size="sm">
            <thead>
                <tr>
                    <th width="150">文章ID</th>
                    <th width="740">标题</th>
                    <th width="120">作者</th>
                    <th width="200">发布日期</th>
                    <th width="100">机型</th>
                    <th width="100">浏览量</th>
                    <th width="100">点赞量</th>
                </tr>
            </thead>
            <tbody id="ID-table-body"></tbody>
        </table>
        <div id="loadingTips" style="text-align: center; display: none;">
            <i class="layui-icon layui-icon-loading"></i> 加载中...
        </div>
    </div>
</div>

<script src="../../layui/layui.js"></script>
<script src="../../js/jquery-3.6.0.min.js"></script>
<script>
layui.use(['form', 'flow'], function(){
    var form = layui.form;
    var flow = layui.flow;
    var $ = layui.$;
    
    // 当前页码和搜索参数
    var currentPage = 1;
    var searchParams = { model: '手机' };
    var isLoading = false;

    // 加载数据函数
    function loadData(page, callback) {
        if(isLoading) return;
        
        isLoading = true;
        $('#loadingTips').show();

        $.ajax({
            url: '../../SelectPhoneArticleServlet',
            type: 'GET',
            dataType: 'json',
            data: Object.assign({}, searchParams, {
                page: page,
                limit: 15
            }),
            complete: function() {
                isLoading = false;
                $('#loadingTips').hide();
            },
            success: function(res) {
                if(res.code === 0) {
                    var filteredData = res.data.filter(item => item.release == 1);
                    callback(filteredData);
                }
            },
            error: function() {
                layer.msg('数据加载失败', {icon: 2});
            }
        });
    }

    // 渲染表格数据
    function renderTable(data) {
        var html = '';
        data.forEach(function(item) {
            html += `
            <tr>
                <td>${item.titleId}</td>
                <td><a href="CurrentArticle.html?titleId=${item.titleId}">${item.topic}</a></td>
                <td>${item.name}</td>
                <td>${item.uploadTime}</td>
                <td>${item.model}</td>
                <td>${item.views}</td>
                <td>${item.likes}</td>
            </tr>`;
        });
        $('#ID-table-body').append(html);
    }

    // 初始化加载第一页
    loadData(1, function(initData) {
        renderTable(initData);
    });

    // 滚动加载
    flow.load({
        elem: '#ID-table-body',
        scrollElem: '#ID-table-body',
        done: function(page, next) {
            loadData(page, function(data) {
                currentPage = page;
                next(renderTable(data), data.length < 15);
            });
        }
    });

    // 搜索功能
    form.on('submit(demo-table-search)', function(data) {
        searchParams = Object.assign({ model: '手机' }, data.field);
        currentPage = 1;
        $('#ID-table-body').empty();
        loadData(1, function(newData) {
            renderTable(newData);
        });
        return false;
    });
});
</script>
</body>
</html>