		} else {
			titleId = -1;
		}
		if (request.getParameter("topic") != "") {
			topic = request.getParameter("topic");
		} else {
			topic = null;
		}
		if (request.getParameter("name") != "") {
			name = request.getParameter("name");
		} else {
			name = null;
		}
		if (request.getParameter("model") != "") {
			model = request.getParameter("model");
		} else {
			model = null;
		}

