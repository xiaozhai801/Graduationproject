	<script>
		layui.use([ 'form', 'layer' ], function() {
			var form = layui.form;
			var layer = layui.layer;

			// 提交事件
			form.on('submit(demo2)', function(data) {
				var field = data.field;

				$.ajax({
					url : '',//通讯地址
					type : 'post',//get或者post 
					contentType : "application/json;charset=UTF-8",
					data : {

					},//发送到服务端的数据K-V形式
					dataType : "text",//接收到的数据的类型可以是json或者text
					success : function(res) {
						if (res == "success") {
							layer.msg('修改成功', {
								icon : 1, // 显示成功图标
								time : 2000
							// 提示信息显示 2 秒
							});
						} else {
							layer.msg('修改失败', {
								icon : 2, // 显示成功图标
								time : 2000
							// 提示信息显示 2 秒
							});
						}
					}
				});

				return false;
			});
		});
	</script>
