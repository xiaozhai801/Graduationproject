<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>所有文章</title>
    <link href="../../layui/css/layui.css" rel="stylesheet">
    <script src="../../layui/layui.js"></script>
    <script src="../../js/jquery-3.6.0.min.js"></script>
    <style>
        html, body {
            overflow: hidden;
        }

        /* 定义表格行的样式 */
       .article-table-row {
            background-color: #f9f9f9; /* 背景颜色 */
            transition: background-color 0.3s ease; /* 过渡效果 */
        }

       .article-table-row:hover {
            background-color: #e9e9e9; /* 鼠标悬停时的背景颜色 */
        }
    </style>
</head>
<body>
    <!-- 搜索表单 -->
    <form class="layui-form layui-row layui-col-space16">
        <div class="layui-form-item">
            <!-- 文章ID输入 -->
            <div class="layui-input-inline">
                <input type="text" name="titleId" placeholder="文章ID" class="layui-input" style="width: 150px;">
            </div>
            <!-- 标题输入 -->
            <div class="layui-input-inline">
                <input type="text" name="topic" placeholder="标题" class="layui-input" style="width: 150px;">
            </div>
            <!-- 作者输入 -->
            <div class="layui-input-inline">
                <input type="text" name="name" placeholder="作者" class="layui-input" style="width: 150px;">
            </div>
            <!-- 机型下拉菜单 -->
            <div class="layui-input-inline">
                <div class="layui-btn-container">
                    <button class="layui-btn" type="button" id="modelDropdown" style="width: 120px;">
                        <span>机型</span>
                        <i class="layui-icon layui-icon-down layui-font-12"></i>
                    </button>
                </div>
                <!-- 隐藏字段保存机型值 -->
                <input type="hidden" name="model" id="modelInput">
            </div>
            <!-- 搜索按钮 -->
            <div class="layui-input-inline">
                <button class="layui-btn" lay-submit lay-filter="searchBtn">
                    <i class="layui-icon layui-icon-search"></i>
                </button>
            </div>
        </div>
    </form>

    <!-- 表格容器 -->
    <table id="articleTable" lay-filter="articleTable">
        <!-- 这里可以添加表头 -->
        <thead>
            <tr>
                <th>标题</th>
                <th>作者</th>
                <th>发布日期</th>
                <th>机型</th>
                <th>浏览量</th>
                <th>点赞量</th>
            </tr>
        </thead>
        <tbody>
            <!-- 这里会动态填充表格行数据 -->
        </tbody>
    </table>

    <script>
        layui.use(['table', 'form', 'dropdown'], function () {
            var table = layui.table;
            var form = layui.form;
            var dropdown = layui.dropdown;
            var $ = layui.$;

            // 初始化机型下拉菜单
            dropdown.render({
                elem: '#modelDropdown',
                data: [
                    { title: '手机', id: 100 },
                    { title: '笔记本电脑', id: 101 },
                    { title: '游戏主机', id: 102 }
                ],
                click: function (obj) {
                    $('#modelDropdown span').text(obj.title);  // 更新按钮显示
                    $('#modelInput').val(obj.title);            // 更新隐藏字段
                }
            });

            // 初始化表格
            table.render({
                elem: '#articleTable',
                url: '../../SelectAllArticleServlet',
                page: true,
                cols: [[
                    {
                        field: 'topic',
                        title: '标题',
                        width: 740,
                        templet: function (d) {
                            return '<a class="layui-table-link" href="CurrentArticle.html?titleId=' + d.titleId + '">' + d.topic + '</a>';
                        }
                    },
                    { field: 'name', title: '作者', width: 120, sort: true },
                    { field: 'uploadTime', title: '发布日期', width: 200, sort: true },
                    { field: 'model', title: '机型', width: 100 },
                    { field: 'views', title: '浏览量', width: 100 },
                    { field: 'likes', title: '点赞量', width: 100 }
                ]],
                height: 'full-120',
                parseData: function (res) {
                    // 仅在初始化时过滤 release=1 的数据
                    if (res.code === 0 && this.url.indexOf('SelectAllArticleServlet')!== -1) {
                        res.data = res.data.filter(function (item) {
                            return item.release == 1;
                        });
                    }
                    return res;
                },
                done: function (res, curr, count) {
                    // 为每行添加自定义的 CSS 类
                    $('.layui-table-body tbody tr').addClass('article-table-row');
                }
            });

            // 模拟搜索按钮点击后的操作，进行一次重载（传递空参数，可根据需求修改）
            var initialField = {};
            initialField.model = $('#modelInput').val();
            table.reload('articleTable', {
                url: '../../SearchArticleServlet',
                where: initialField,
                page: { curr: 1 }
            });

            // 搜索提交事件
            form.on('submit(searchBtn)', function (data) {
                var field = data.field;
                // 显式传递机型参数
                field.model = $('#modelInput').val();

                // 重载表格
                table.reload('articleTable', {
                    url: '../../SearchArticleServlet',
                    where: field,
                    page: { curr: 1 }
                });
                return false;
            });
        });
    </script>
</body>
</html>