package com.zpq.controller;

import java.io.IOException;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.alibaba.fastjson.JSONObject;
import com.zpq.dao.ArticleDao;
import com.zpq.dao.ArticleDaoImpl;
import com.zpq.pojo.Vo;

/**
 * Servlet implementation class CountModelArticleServlet
 */
@WebServlet("/CountModelArticleServlet")
public class CountModelArticleServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public CountModelArticleServlet() {
		super();
		// TODO Auto-generated constructor stub
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.setContentType("application/json");
		response.setCharacterEncoding("UTF-8");
		
		ArticleDao articleDao=new ArticleDaoImpl();
		Map<String, Integer> articleCountMap = new HashMap<>();
		List<Object> modelCountList=new ArrayList<>();
		try {
			articleCountMap.put("phone", articleDao.countModelArticle("phone"));
			articleCountMap.put("laptop", articleDao.countModelArticle("laptop"));
			articleCountMap.put("console", articleDao.countModelArticle("console"));
			articleCountMap.put("powerTools", articleDao.countModelArticle("powerTools"));
			articleCountMap.put("all", articleDao.countModelArticle("all"));
			modelCountList.add(articleCountMap);
			
            Vo vo = new Vo();
            vo.setCode(0);
            vo.setMsg("success");
            vo.setCount(articleCountMap.get("all"));
            vo.setData(modelCountList);
            response.getWriter().write(JSONObject.toJSON(vo).toString());
            System.out.println(JSONObject.toJSON(vo).toString());
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
