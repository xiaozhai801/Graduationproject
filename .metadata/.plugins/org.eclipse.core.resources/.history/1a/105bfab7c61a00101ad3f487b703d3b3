package com.zpq.controller;

import java.io.IOException;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.zpq.dao.PersonalInfoDao;
import com.zpq.dao.PersonalInfoDaoImpl;
import com.zpq.pojo.User;
//用户修改个人信息
/**
 * Servlet implementation class EditSelectPersonalInfoServlet
 */
@WebServlet("/EditSelectPersonalInfoServlet")
public class EditSelectPersonalInfoServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public EditSelectPersonalInfoServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		//response.getWriter().append("Served at: ").append(request.getContextPath());
		doPost(request, response);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		request.setCharacterEncoding("UTF-8");
		response.setContentType("text/html;charset=UTF-8");
		//获取页面元素值
		String userId=request.getParameter("userId");
		String name=request.getParameter("name");
		String sex=request.getParameter("sex");
		int age=Integer.parseInt(request.getParameter("age"));
		String email=request.getParameter("email");
		//设置值
		User user=new User();
		user.setUserId(userId);
		user.setName(name);
		user.setSex(sex);
		user.setAge(age);
		user.setEmail(email);
		
		PersonalInfoDao editPersonalInfoDao=new PersonalInfoDaoImpl();
		try {
			if (editPersonalInfoDao.EditUser(user)==1) {
				response.getWriter().write("success");
			}else {
			    response.getWriter().write("fail");
			}
		} catch (SQLException | IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
