    <div class="main-container">
        <!-- 搜索表单 -->
        <form class="layui-form layui-row">
            <div class="layui-form-item">
                <div class="layui-input-inline">
                    <input type="text" name="titleId" placeholder="文章ID" class="layui-input" style="width: 180px;">
                </div>
                <div class="layui-input-inline">
                    <input type="text" name="topic" placeholder="标题" class="layui-input" style="width: 200px;">
                </div>
                <div class="layui-input-inline">
                    <input type="text" name="name" placeholder="作者" class="layui-input" style="width: 180px;">
                </div>
                <div class="layui-input-inline">
                    <div class="layui-btn-container">
                        <button class="layui-btn" type="button" id="modelDropdown" style="white-space: nowrap;">
                            <span>机型</span>
                            <i class="layui-icon layui-icon-down layui-font-16"></i>
                        </button>
                    </div>
                    <input type="hidden" name="model" id="modelInput">
                </div>
                <div class="layui-input-inline">
                    <button class="layui-btn" lay-submit lay-filter="searchBtn">
                        <i class="layui-icon layui-icon-search"></i> 搜索
                    </button>
                </div>
            </div>
        </form>

        <!-- 表格容器 -->
        <table id="articleTable" lay-filter="articleTable"></table>
    </div>

    <script>
        layui.use(['table', 'form', 'dropdown'], function () {
            var table = layui.table;
            var form = layui.form;
            var dropdown = layui.dropdown;
            var $ = layui.$;

            dropdown.render({
                elem: '#modelDropdown',
                data: [{ title: '手机', id: 100 }, { title: '笔记本电脑', id: 101 }, { title: '游戏主机', id: 102 }],
                click: function (obj) {
                    $('#modelDropdown span').text(obj.title);
                    $('#modelInput').val(obj.title);
                }
            });

            table.render({
                elem: '#articleTable',
                url: '../../SelectAllArticleServlet',
                page: true,
                cols: [[
                    { field: 'topic', title: '标题', width: 740, templet: d => `<a class="layui-table-link" href="CurrentArticle.html?titleId=${d.titleId}">${d.topic}</a>` },
                    { field: 'name', title: '作者', width: 120, sort: true },
                    { field: 'uploadTime', title: '发布日期', width: 200, sort: true },
                    { field: 'model', title: '机型', width: 100 },
                    { field: 'views', title: '浏览量', width: 100 },
                    { field: 'likes', title: '点赞量', width: 100 }
                ]],
                height: 'full-120',
                parseData: res => {
                    if (res.code === 0 && this.url.indexOf('SelectAllArticleServlet') !== -1) {
                        res.data = res.data.filter(item => item.release == 1);
                    }
                    return res;
                }
            });

            var initialField = { model: $('#modelInput').val() };
            table.reload('articleTable', { url: '../../SearchArticleServlet', where: initialField, page: { curr: 1 } });

            form.on('submit(searchBtn)', function (data) {
                data.field.model = $('#modelInput').val();
                table.reload('articleTable', { url: '../../SearchArticleServlet', where: data.field, page: { curr: 1 } });
                return false;
            });
        });
    </script>
</body>

